<Window x:Class="helveticride.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Route Planner" Height="450" Width="800"
        Background="#f3f4f6">

  <Grid>
    <!-- Grid mit zwei Zeilen: eine für die Karte und eine für die Steuerelemente -->
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <!-- Kartenbereich (nimmt den meisten Platz ein) -->
      <RowDefinition Height="Auto" />
      <!-- Steuerelemente (wird automatisch der Größe angepasst) -->
    </Grid.RowDefinitions>

    <!-- WebView2 für Google Maps in der ersten Zeile -->
    <wv:WebView2 Name="webView" Grid.Row="0" />

    <!-- UI-Steuerelemente (TextBoxen und Button) in der zweiten Zeile -->
  </Grid>

</Window>
