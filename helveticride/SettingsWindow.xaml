<Page x:Class="helveticride.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen" 
        Background="#0c0c18">
  <Grid Margin="20">
    <StackPanel>
      <TextBlock Text="⚙ Einstellungen" FontSize="24" Foreground="#c6a0f6" Margin="0 0 0 20"/>
      <TextBlock Text="Hier könnten zukünftige Einstellungen stehen..." Foreground="White" Margin="0 0 0 10"/>
      <Button Content="🔙 Zurück" Height="40" Click="Back_Click"
                    Background="#7f5af0" Foreground="White" FontSize="16"/>
    </StackPanel>
  </Grid>
</Page>
