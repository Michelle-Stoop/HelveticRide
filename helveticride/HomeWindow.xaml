<Page x:Class="helveticride.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="500" Width="800"
        Background="#0c0c18">
  <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
    <StackPanel HorizontalAlignment="Center">
      <TextBlock Text="🏍️ Willkommen bei Helveticride" 
                       Foreground="#c6a0f6" FontSize="26" TextAlignment="Center" Margin="0 0 0 20"/>
      <Button Content="🗺 Zur Karte" Margin="0 5" Height="45"
                    Click="ToMap_Click" Background="#7f5af0" Foreground="White" FontSize="16"/>
      <Button Content="💾 Gespeicherte Routen" Margin="0 5" Height="45"
                    Click="ToRoutes_Click" Background="#222" Foreground="White" FontSize="16"/>
      <Button Content="⚙ Einstellungen" Margin="0 5" Height="45"
                    Click="ToSettings_Click" Background="#222" Foreground="White" FontSize="16"/>
      <Button Content="❓ Hilfe" Margin="0 5" Height="45"
                    Click="ToHelp_Click" Background="#222" Foreground="White" FontSize="16"/>
    </StackPanel>
  </Grid>
</Page>
