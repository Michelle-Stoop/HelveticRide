<Page x:Class="helveticride.HelpWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HelpWindow">

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Hilfe &amp; Feedback" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />


    <TextBox x:Name="FeedbackBox" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" Height="200" FontSize="14" Margin="0,0,0,20"/>

    <Button Grid.Row="2" Content="Feedback senden" Width="160" Height="35"
                HorizontalAlignment="Left" Click="SendFeedback_Click"/>
  </Grid>
</Page>
