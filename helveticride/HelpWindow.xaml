<Window x:Class="helveticride.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hilfe" Height="500" Width="800"
        Background="#0c0c18">
  <Grid Margin="20">
    <StackPanel>
      <TextBlock Text="❓ Hilfe" FontSize="24" Foreground="#c6a0f6" Margin="0 0 0 20"/>
      <TextBlock TextWrapping="Wrap" Foreground="White" FontSize="14" Text=
                "1. Gib Start, Ziel und optional Zwischenstopp ein.\n
                2. Klicke auf 'Route berechnen'.\n
                3. Du kannst die Route speichern oder dir alle ansehen.\n
                4. Navigation über die untere Leiste oder Startseite.\"/>
            <Button Content="🔙 Zurück" Margin="0 20 0 0" Height="40"
                    Background="#7f5af0" Foreground="White" FontSize="16"
                    Click="Back_Click"/>
        </StackPanel>
  </Grid>
</Window>
